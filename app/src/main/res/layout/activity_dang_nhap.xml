<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKi"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageButton
        android:id="@+id/dn_button_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow_left"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn trở lại"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:background="@drawable/custom_button"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:text="continue with facebook"
        android:textSize="@dimen/text_size"
        android:drawableLeft="@drawable/custom_icon_facebook"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:background="@drawable/custom_button"
        android:paddingLeft="10dp"
        android:layout_marginTop="@dimen/margin_top"
        android:text="continue with google"
        android:textSize="@dimen/text_size"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/custom_icon_google"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Hoặc đăng ký bằng Email"
        android:layout_marginTop="@dimen/margin_top"
        android:textSize="20sp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:background="@drawable/custom_edittext"
        android:hint="Email"
        android:textSize="@dimen/text_size"
        android:inputType="textPersonName" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:background="@drawable/custom_edittext"
        android:orientation="horizontal"
        >

        <EditText
            android:hint="Mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"
            android:inputType="textPassword"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.12"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/eyes"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        />

    <TextView
        android:id="@+id/textView_quen_mat_khau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_marginTop="@dimen/margin_top"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn chưa có tài khoản? "
        android:textColor="@color/black"
        android:layout_weight="0.7"
        android:textSize="15sp"
        android:gravity="right"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="@string/dang_ki_ngay" /></LinearLayout>
</LinearLayout>
</ScrollView>


