<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/texxtView_bao_cao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Kết quả sản xuất Tháng 04 - 2022"
            android:textSize="@dimen/qldh_textsize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_back" />

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow" />

        <TableLayout
            android:id="@+id/tableLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="1dp"
            android:background="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texxtView_bao_cao">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Thời gian"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Chi phí"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Doanh thu"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Lợi nhuận"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>


        <ListView
            android:background="@color/white"
            android:id="@+id/bc_bcdt_listView"
            android:layout_width="0dp"
            android:layout_height="330dp"
            app:layout_constraintEnd_toEndOf="@+id/tableLayout5"
            app:layout_constraintStart_toStartOf="@+id/tableLayout5"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout5"

            />

        <TableLayout
            android:id="@+id/tblLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bc_bcdt_listView"
            android:layout_marginTop="15dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Tổng chi phí"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Tổng doanh thu"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Tổng lợi nhuận"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="21.500.000 VNĐ" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="81.000.000 VNĐ" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="59.500.000 VNĐ" />
            </TableRow>


        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
